# PSC Accounting API Environment Configuration
# This is a template file - copy to .env and fill in your actual values
# DO NOT commit .env file to version control

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Storage Mode: "local" or "database"
# local - stores PDF files on disk
# database - stores PDF files in PostgreSQL as base64
STORAGE_MODE=local

# Local storage directory (relative to backend folder)
UPLOAD_DIR=uploads

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Development settings
DEBUG=true
ENVIRONMENT=development

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database Connection
# Replace with your actual database credentials
DB_HOST=your-database-host.amazonaws.com
DB_PORT=5432
DB_NAME=your-database-name
DB_USER=your-database-username
DB_PASSWORD=your-secure-database-password

# Database Connection Pool Settings (optional)
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=20
DB_SSL_MODE=require

# ========================================
# SECURITY CONFIGURATION
# ========================================

# JWT/API Secret Key (generate a strong random key)
JWT_SECRET=your-jwt-secret-key-here
API_SECRET_KEY=your-api-secret-key-here

# CORS Configuration (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# EXTERNAL SERVICES (if needed)
# ========================================

# Firebase/Google Services (if used)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Email Service (if used)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password

# File Storage Service (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-west-2

# ========================================
# DEVELOPMENT/DEBUGGING
# ========================================

# Logging Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable/disable detailed SQL logging
DB_ECHO=false

# ========================================
# PRODUCTION OVERRIDES
# ========================================

# Override these in production environment
# ENVIRONMENT=production
# DEBUG=false
# API_HOST=0.0.0.0
# DB_SSL_MODE=require